{
  "name": "artics-ada-gnat-vscode",
  "displayName": "adagnat",
  "description": "Ada mode for vs code integrated with AdaCore's Gnat",
  "version": "0.0.1",
  "publisher": "pfe",
  "engines": {
    "vscode": "^1.19.0"
  },"repository": {
    "type": "git",
    "url": "https://une_adresse_https_a_definir"
  },
  "icon": "icon.png",
  "categories": ["Other"],
  "activationEvents": ["onCommand:adagnat.check"],
  "main": "./out/adagnat",
  "contributes": {
    "commands": [
      {
        "category": "Ada",
        "command": "adagnat.check",
        "title": "Check adagnat extension active."
      }
    ],
    "languages": [
      {
        "id": "ada",
        "aliases": ["Ada", "ada"],
        "extensions": [".adb", ".ads"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ada",
        "scopeName": "source.ada",
        "path": "./syntaxes/ada.tmLanguage"
      }
    ],
    "problemMatchers": [
      {
        "name": "gnat",
        "owner": "ada",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s*(warning|error)?\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "snippets": [
      {
        "language": "ada",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
